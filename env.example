# Environment Configuration
# Copy this file to .env and update with your values

# Node Environment
NODE_ENV=production

# Server Port (cPanel will set this automatically, but you can override)
PORT=4000

# Frontend API URL (leave empty for same-origin, or set full URL)
VITE_API_URL=

# WhatsApp Session Storage Path (relative to backend directory)
WHATSAPP_SESSION_PATH=./.wwebjs_auth

# Allowed Origins for CORS (comma-separated). Example:
# https://frontend.yourdomain.com,https://admin.yourdomain.com
ALLOWED_ORIGINS=

